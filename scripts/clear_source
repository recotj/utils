#!/usr/bin/env node

'use strict';

const pkgJSON = require('../package.json');
const shouldRun = Boolean(pkgJSON['_where']);

if (!shouldRun) return;

const spawn = require('child_process').spawn;
const path = require('path');

spawn('rm', [
	'-rf',
	'packages',
	'gulpfile.js',
	'.babelrc',
	'.gitignore',
	'.editorconfig',
	'.travis.yml',
	'scripts'
], {cwd: path.resolve(__dirname, '..')});
